<Window x:Class="WpfApp1.view.WindowSpiaggia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.view"
        mc:Ignorable="d"
        x:Name="wndSpiaggia"
        Title="Spiaggia" Height="500" Width="900" ResizeMode="NoResize">
    <Grid Background="#97e3e0">
        <Canvas Name="spiaggiaCanvas" Background="#F4A460"  Margin="0,20,0,49" MouseRightButtonDown="spiaggiaCanvas_MouseRightButtonDown">
        </Canvas>
        <Label x:Name="lblNumeroOmbrelloni" Content="Ombrelloni in spiaggia: {Binding Get}" HorizontalAlignment="Left" Margin="10,426,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnRimuoviOmbrellone" Style="{StaticResource CustomButtonStyle}" Content="Rimuovi ombrellone" HorizontalAlignment="Left" Margin="708,422,0,0" Width="137" Height="35" VerticalAlignment="Top" Click="btnRimuoviOmbrellone_Click"/>
        <Button x:Name="btnPrenotaOmbrellone" Style="{StaticResource CustomButtonStyle}" Content="Prenota" HorizontalAlignment="Left" Margin="556,422,0,0" Width="137" Height="35" VerticalAlignment="Top" Click="btnPrenotaOmbrellone_Click"/>
        <Button x:Name="btnDisdiciOmbrellone" Style="{StaticResource CustomButtonStyle}" Content="Disdici ombrellone" HorizontalAlignment="Left" Margin="414,422,0,0" Width="137" Height="35" VerticalAlignment="Top" Click="btnDisdiciOmbrellone_Click" />
        <DatePicker x:Name="dtpCalendar" HorizontalAlignment="Left" Margin="10,-4,0,0" VerticalAlignment="Top" SelectedDateChanged="dtpCalendar_SelectedDateChanged"/>
        <Button x:Name="btnInfoOmbrellone" Style="{StaticResource CustomButtonStyle}" Content="Info ombrellone" HorizontalAlignment="Left" Margin="272,422,0,0" Width="137" Height="35" VerticalAlignment="Top" Click="btnInfoOmbrellone_Click"/>
    </Grid>
</Window>
