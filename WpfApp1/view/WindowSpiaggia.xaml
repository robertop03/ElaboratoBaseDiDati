<Window x:Class="WpfApp1.view.WindowSpiaggia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.view"
        mc:Ignorable="d"
        x:Name="wndSpiaggia"
        Title="Spiaggia" Height="500" Width="900" ResizeMode="NoResize">
    <Grid Background="#97e3e0">
        <Canvas Name="spiaggiaCanvas" Background="#F4A460"  Margin="0,20,0,49" MouseRightButtonDown="spiaggiaCanvas_MouseRightButtonDown">
        </Canvas>
        <Label x:Name="lblNumeroOmbrelloni" Content="Ombrelloni in spiaggia: " HorizontalAlignment="Left" Margin="10,426,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnRimuoviOmbrellone" Content="Rimuovi ombrellone" HorizontalAlignment="Left" Margin="708,422,0,0" Width="137" Height="35" VerticalAlignment="Top"/>
        <Button x:Name="btnPrenotaOmbrellone" Content="Prenota" HorizontalAlignment="Left" Margin="556,422,0,0" Width="137" Height="35" VerticalAlignment="Top"/>
    </Grid>
</Window>
